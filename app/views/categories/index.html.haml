.card{:id => "categories "}
  .card-header.d-flex.justify-content-center
    %h2 Categories
    - if current_user.admin?
      = link_to "+", new_category_path, class:'text-decoration-none fw-bold h5'
  .card-body.d-flex.justify-content-center
    - @categories.each do |category|
      .d-flex.justify-content-between.card.w-25.p-2.m-1
        .fw-bold.text-center.mx-2
          = link_to category_path(category[:id]), class: 'text-primary fw-bold card-title h5 mb-0 text-decoration-none' do
            =category.name
        - if current_user.admin?
          %hr.mx-5/
          .d-flex.justify-content-center.align-content-center
            = button_to category, method: :delete, class:"btn px-3", data: {confirm: "Are you sure?"}  do
              %b 🗑️
            = link_to edit_category_path(category[:id]) ,class:"btn px-3"  do
              %b 🔧
  = link_to '🏠 Page', :index, class: 'text-decoration-none h6 mx-auto btn btn-outline-secondary w-25'