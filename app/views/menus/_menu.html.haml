- @menus.each do |m|
  .card.px-0.m-1{:style => "width: 32%;"}
    .card-header.d-flex.px-3.justify-content-between.align-center{:style => "background-color: #8EB3CD;"}
      %h5.d-flex.card-title.m-2= m.date.strftime("%e %b %Y")
      - if current_user.admin?
        %span.d-flex
          = button_to m, method: :delete, class:"btn px-3" do
            %i.fa.fa-trash
          = link_to  edit_menu_path(m[:id]), class:"btn px-3" do
            %i.fa.fa-gear
    .card-body.justify-content-between.mx-2
      - total = 0
      - m.dish_menus.each_with_index  do |dish_in_menu, index|
        - total += dish_in_menu.price
        .d-flex.justify-content-between
          %div
            = index + 1
            \. #{dish_in_menu.dish.name}
          %div
            = dish_in_menu.dish.price_type.portion
            \/   #{dish_in_menu.price}
    .card-footer.text-muted.d-flex.justify-content-end
      %span.m-2
        %b Total:
        = total
